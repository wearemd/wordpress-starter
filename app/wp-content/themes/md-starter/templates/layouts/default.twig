<!DOCTYPE html>
<html class="{% block html_class %}{% endblock %}" {{ site.language_attributes }}>
  <head>
    <meta charset="{{ site.charset }}">
    <meta name="description" content="{{ site.description }}">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>
      {% if wp_title %}
        {{ wp_title }} - {{ site.name }}
      {% else %}
        {{ site.name }}
      {% endif %}
    </title>
    {{function('wp_head')}}
    <link rel="shortcut icon" href="{{ site.theme.link }}/images/favicon/favicon.ico" type="image/x-icon">
  </head>
  <body>
    <!--Wrapper-->
    <div class="wrapper">
      <!--Header-->
      <header class="header">
        {% include "components/navbar.twig" with {'navbar': navbar.get_items} %}
      </header>

      {# Main #}
      {% block content %}
        Sorry, no content
      {% endblock %}

      <!--Footer-->
      <footer class="footer">
        <div class="container">
          <div class="columns">
            <div class="column">
              {% include "components/nav-footer.twig" with {'nav_footer': nav_footer.get_items}%}
            </div>
          </div>
        </div>
      </footer>
    </div>

    {{function('wp_footer')}}
  </body>
</html>
